<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoexInfoMobile.Custom.Html.HtmlTableView"
             x:Name="contentView">

    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="Grid" x:Name="rowStyle">
                <Setter Property="ColumnSpacing" Value="1" />
            </Style>

            <Style TargetType="StackLayout" x:Key="TableContainer">
                <Setter Property="Padding" Value="1" />
                <Setter Property="Spacing" Value="1" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
    
    <ContentView.Content>
        <StackLayout x:Name="_table" Style="{StaticResource TableContainer}" />
    </ContentView.Content>
</ContentView>